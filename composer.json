{
    "name": "jrtashjian/omniform",
	"type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "JR Tashjian",
            "homepage": "https://jrtashjian.com"
        },
        {
            "name": "OmniForm",
            "homepage": "https://omniform.io"
        }
    ],
    "autoload": {
        "psr-4": {
            "OmniForm\\": "includes"
        },
        "classmap": [
            "vendor_prefixed/"
        ],
        "files": [
            "includes/Plugin/Support/Functions.php",
            "vendor_prefixed/respect/stringifier/src/stringify.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "OmniForm\\Tests\\Unit\\": "phpunit/unit/"
        }
    },
    "require": {
        "dflydev/dot-access-data": "^3.0",
        "league/container": "^4.2",
        "respect/validation": "^2.2"
    },
    "require-dev": {
		"10up/wp_mock": "^1.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.2",
        "johnpbloch/wordpress-core": "^6.9",
        "phpcompatibility/phpcompatibility-wp": "^2.1",
        "wp-cli/wp-cli-bundle": "^2.6",
        "wp-coding-standards/wpcs": "^3.0",
        "yoast/phpunit-polyfills": "^1.0"
    },
    "config": {
        "platform": {
            "php": "7.4"
        },
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "sort-packages": true
    },
    "scripts": {
        "lint": "phpcs --standard=phpcs.xml.dist",
        "lint-prefixed": "phpcs --standard=phpcs-prefixed.xml.dist",
        "format": "phpcbf --standard=phpcs.xml.dist --report-summary --report-source",
        "test": "phpunit",
        "build-release": [
            "rm -r ./vendor",
            "@composer dump-autoload",
            "wp dist-archive ./",
            "@composer install"
        ],
        "phpscoper": [
            "rm -rf ./vendor ./vendor_prefixed",
            "@composer install --no-autoloader --no-dev --prefer-dist",
            "php-scoper add-prefix --force",
            "rm -rf ./vendor",
            "@composer dump-autoload --optimize"
        ]
    }
}
